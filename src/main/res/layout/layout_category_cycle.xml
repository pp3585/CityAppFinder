<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_weight="3"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/value_2dp"
        android:layout_marginRight="@dimen/value_2dp"
        android:layout_marginTop="@dimen/value_2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <include
            android:id="@+id/view0"
            layout="@layout/layout_category"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/value_2dp"
            android:layout_weight="2" />

        <include
            android:id="@+id/view1"
            layout="@layout/layout_category"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/value_2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/value_2dp"
            android:layout_weight="3"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <include
                    android:id="@+id/view2"
                    layout="@layout/layout_category"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/value_2dp"
                    android:layout_marginRight="@dimen/value_2dp"
                    android:layout_weight="1" />

                <include
                    android:id="@+id/view3"
                    layout="@layout/layout_category"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/value_2dp"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <include
                    android:id="@+id/view4"
                    layout="@layout/layout_category"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/value_2dp"
                    android:layout_weight="1" />

                <include
                    android:id="@+id/view5"
                    layout="@layout/layout_category"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>


        </LinearLayout>

        <include
            android:id="@+id/view6"
            layout="@layout/layout_category"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/value_2dp"
        android:layout_marginRight="@dimen/value_2dp"
        android:layout_marginTop="@dimen/value_2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <include
            android:id="@+id/view7"
            layout="@layout/layout_category"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/value_2dp"
            android:layout_weight="3" />

        <include
            android:id="@+id/view8"
            layout="@layout/layout_category"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

    </LinearLayout>

</LinearLayout>